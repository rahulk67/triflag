                        <script>
                            $(document).ready(function () {
                                $(window).on('load', function () {
                                    setTimeout(() => {
                                        $('#preloader').fadeOut(0);
                                    }, 100);
                                })
                            })

                            function handleResult() {
                                const recharge = $('#b').val();
                                const start = $('#s').val();
                                const end = $('#l').val();


                                $.ajax({
                                    url: '/admin/filterData',
                                    type: 'POST',
                                    data: { recharge, start, end },
                                    success: (response) => {
                                        if (response.status) {
                                            renderUsers(response.data)
                                            console.log(response);
                                            Swal.fire(
                                                'Good job!',
                                                'You clicked the button!',
                                                'success'
                                            );
                                        }
                                        else {
                                            Swal.fire({
                                                icon: 'error',
                                                title: response.message,
                                            });
                                        }
                                    },
                                    error: (error) => {
                                        console.error('Error:', error);
                                    }

                                });

                            }

                            $('#b, #s, #l').keydown(function (event) {

                                if (event.keyCode === 13 || event.which === 13) {
                                    handleResult();
                                }
                            });

                            let selectedPhones = [];

                            function renderUsers(data) {
                                let tbody = $('.tableBody');
                                tbody.empty();

                                data.forEach((val, index) => {
                                    let row = `
                                    <tr>
                                        <td>${val.name_user}</td>
                                        <td>${val.phone}</td>
                                        <td>${val.money}</td>
                                        <td>${val.win_wallet}</td>
                                        <td>
                                            <input type="checkbox" id="smscheckbox${index}" name="smscheckbox${index}" value="${val.phone}">
                                        </td>
                                    </tr>
                                `;
                                    tbody.append(row);
                                    const checkbox = document.getElementById('smscheckbox' + index);
                                    checkbox.addEventListener('change', function () {
                                        if (this.checked) {
                                            selectedPhones.push(val.phone);
                                        } else {
                                            selectedPhones = selectedPhones.filter(phone => phone !== val.phone);
                                        }

                                        console.log(selectedPhones);
                                    });
                                });
                            
                            }


                        </script>
