<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
    <style>
        body {
            padding: 0;
            margin: 0;
            width: 100vw;
            overflow-x: hidden;
            background-color: #F7F8FF;
            max-width: 400px;
            background-color: black;
            margin: auto;
        }

        @media (max-width:500px) {
            body{
                max-width: unset;
            }
        }
    </style>
</head>
<body>
    <div style="background-color: white;min-height: 100vh;">
  <div style="width: 100%;display: flex;flex-direction: row;justify-content: space-evenly;align-items: center;background: white;box-shadow: 5px 10px 8px 0px rgb(0 0 0 / 8%);">
      <i class="fa-solid fa-angle-left" onclick="window.history.back()"></i>
      <div style="width: 84%;display: flex;justify-content: center;">
          <p style="margin-bottom: 0%;font-size: 18px;margin-top: 4%;">Invitation Record</p>
      </div>
  </div>
  <div style="width: 100%;display: flex;flex-direction: column;justify-content: center;align-items: center;" id="mainContainer">
       
       <div style="width: 93%;display: flex;justify-content: center;align-items: center;color: #768096;font-size: 12px;font-weight: bold; margin: 5px auto;">
           No More
       </div>
   </div>
</div>
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
     $(document).ready(async function() {
    
    
    const {data} = await axios.get('/promotion/partnerData');
     const mainContainer = $('#mainContainer');
     mainContainer.empty();

     data.data.forEach(val=>{
        const htmlContainer = `
        <div style="width: 93%;background-color: white;border-radius: 8px;box-shadow: 5px 10px 8px 0px rgb(0 0 0 / 8%);display: flex;flex-direction: column;justify-content: center;align-items: center; margin: 10px auto;">
           <div style="width: 93%;display: flex;flex-direction: row;justify-content: space-between;align-items: center; margin: 10px auto;">
                <p style="color: #3d4557;margin-bottom: 0%;font-size: 14px;font-weight: 600;"> ${generateRandomString()} </p>
                <p style="color: #768096;margin-bottom: 0%;font-size: 14px;">UID:${val.phone}</p>
           </div>
           <div style="width: 93%;display: flex;flex-direction: row;justify-content: space-between;align-items: center; margin: 5px auto;">
                <p style="color: #768096;margin-bottom: 0%;font-size: 11px;font-weight: 600;"> Registration time </p>
                <p style="color: #768096;margin-bottom: 0%;font-size: 11px;">${val.time}
               </p>
           </div>
           <div style="width: 93%;display: flex;flex-direction: row;justify-content: space-between;align-items: center;  margin: 5px auto;">
              <p style="color: #768096;margin-bottom: 0%;font-size: 11px;font-weight: 600;"> 1st deposit amount </p>
              <p style="color: #768096;margin-bottom: 0%;font-size: 14px;color: #FB5B5B;font-weight: bold;"> ₹${val.firstRecharge} </p>
           </div>
           <div style="width: 93%;display: flex;flex-direction: row;justify-content: space-between;align-items: center; margin: 5px auto;">
              <p style="color: #768096;margin-bottom: 0%;font-size: 11px;font-weight: 600;"> 2nd deposit amount </p>
              <p style="color: #768096;margin-bottom: 0%;font-size: 14px;color: #FB5B5B;font-weight: bold;">₹${val.secondRecharge}</p>
           </div>
           <div style="width: 93%;display: flex;flex-direction: row;justify-content: space-between;align-items: center; margin: 5px auto;">
              <p style="color: #768096;margin-bottom: 0%;font-size: 11px;font-weight: 600;"> 3rd deposit amount </p>
              <p style="color: #768096;margin-bottom: 0%;font-size: 14px;color: #FB5B5B;font-weight: bold;"> ₹${val.thirdRecharge} </p>
           </div>
           <div style="width: 93%;display: flex;flex-direction: row;justify-content: space-between;align-items: center; margin: 5px auto;">
              <p style="color: #768096;margin-bottom: 0%;font-size: 11px;font-weight: 600;"> Turnover  </p>
              <p style="color: #768096;margin-bottom: 0%;font-size: 14px;color: #FEAA57;font-weight: bold;"> ₹${val.totalRecharge} </p>
           </div>
       </div> 
        `
        mainContainer.append(htmlContainer);
     })

     });
     function generateRandomString() {
    const prefix = "Member";
    const characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
    let randomString = "";

    for (let i = 0; i < 8; i++) {
        randomString += characters.charAt(Math.floor(Math.random() * characters.length));
    }

    return prefix + randomString; 
}
</script>
</body>
</html>